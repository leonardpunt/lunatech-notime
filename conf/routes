# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Authenticate
GET     /login						controllers.Application.login()
POST	/login						controllers.Application.authenticate()
GET		/logout						controllers.Application.logout()

# Admin
GET		/admin						controllers.Application.admin()

# Users
GET		/users						controllers.Users.all()
GET		/user						controllers.Users.add()
POST	/user 						controllers.Users.create()
GET		/user/:id					controllers.Users.edit(id: Long)
POST	/user/:id					controllers.Users.update(id: Long)
POST	/user/:id/delete			controllers.Users.delete(id: Long)
GET		/user/:id/home				controllers.Users.read(id: Long)
GET		/user/:id/assignments		controllers.Users.assignmentsOverview(id: Long)
GET		/user/:id/days-with-too-few-hours	controllers.Users.daysTooFewHours(id: Long)

# Customers
GET		/customers					controllers.Customers.all()
GET		/customer					controllers.Customers.add()
POST	/customer					controllers.Customers.create()
GET		/customer/:id				controllers.Customers.edit(id: Long)
POST	/customer/:id				controllers.Customers.update(id: Long)
POST	/customer/:id/delete		controllers.Customers.delete(id: Long)

# Projects
GET		/projects					controllers.Projects.all()
GET		/project					controllers.Projects.add()
POST	/project					controllers.Projects.create()
GET		/project/:id				controllers.Projects.edit(id: Long)
POST	/project/:id				controllers.Projects.update(id: Long)
POST	/project/:id/delete			controllers.Projects.delete(id: Long)

# ProjectAssignments
GET		/project/:id/assignment		controllers.ProjectAssignments.add(id: Long)
POST	/project/:id/assignment		controllers.ProjectAssignments.create(id: Long)
GET		/project/:pId/assignment/:aId	controllers.ProjectAssignments.edit(pId: Long, aId: Long)
POST	/project/:pId/assignment/:aId	controllers.ProjectAssignments.update(pId: Long, aId: Long)
POST	/assignment/:id/delete 		controllers.ProjectAssignments.delete(id: Long)
GET		/user/:uId/assignment/:aId/switchStarred	controllers.ProjectAssignments.toggleStarred(uId: Long, aId: Long)

# HourEntries
GET		/user/:id/hourentry			controllers.HourEntries.add(id: Long)
POST	/user/:id/hourentry			controllers.HourEntries.create(id: Long)
GET		/user/:uId/hourentry/:eId	controllers.HourEntries.edit(uId: Long, eId: Long)
POST	/user/:uId/hourentry/:eId	controllers.HourEntries.update(uId: Long, eId: Long)
POST	/user/:uId/hourentry/:eId/delete	controllers.HourEntries.delete(uId: Long, eId: Long)
GET		/user/:id/hourentry/day/:date	controllers.HourEntries.addForDay(id: Long, date: DateTime)
POST	/user/:id/hourentry/day/:date	controllers.HourEntries.createForDay(id: Long, date: DateTime)
GET		/user/:id/hourentries/year/:year/week/:week	controllers.HourEntries.addForWeek(id: Long, year: Int, week: Int)
POST	/user/:id/hourentries/year/:year/week/:week	controllers.HourEntries.createForWeek(id: Long, year: Int, week: Int)
GET		/user/:id/hourentries/multiple	controllers.HourEntries.addMultiple(id: Long)
POST	/user/:id/hourentries/multiple	controllers.HourEntries.createMultiple(id: Long)
GET		/user/:id/hourentries/table	controllers.HourEntries.tableOverview(id: Long)
GET		/user/:id/hourentries/calendar	controllers.HourEntries.calendarOverview(id: Long)

# Tags
GET		/tag						controllers.Tags.find()

# Javascript routing
GET     /assets/javascripts/routes	controllers.Application.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file				controllers.Assets.at(path="/public", file)
